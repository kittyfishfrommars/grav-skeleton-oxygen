<!-- Footer -->
	<div id="footer">
		<section class="container">
			<header class="major">
				<h2>{{ site.footer.social.title|raw }}</h2>
				<span class="byline {{ site.footer.social.byline.class }}">{{ site.footer.social.byline.text|raw }}</span>
			</header>

			{% if site.footer.social.button %}
				<div class="mb-3">
					<a href="{{ site.footer.social.button.url }}" class="button button-secondary {{ site.footer.social.button.class }}">
						{{ site.footer.social.button.text }}
					</a>
				</div>
			{% endif %}

			{% if site.footer.social.items %}
				<ul class="icons {% if site.footer.social.button %} pt-3 {% endif %}">
				{% for item in site.footer.social.items %}
					<li><a href="{{ item.url }}" class="{{ item.icon }}" aria-label="{{ item.title }}"><span>{{ item.title }}</span></a></li>
				{% endfor %}
				</ul>
			{% endif %}
						<hr />
		</section>

		<!-- Copyright -->
		{% for post in taxonomy.findTaxonomy({'tag':'unique-legal'}) %}
			<div id="copyright">
				<a href="{{ post.url ~ site.footer.legal.credits.id }}">{{ site.footer.legal.credits.title|e }}</a> | <a href="{{ post.url ~ site.footer.legal.privacy.id }}">{{ site.footer.legal.privacy.title|e }}</a> | <a href="{{ post.url ~ site.footer.legal.notice.id }}">{{ site.footer.legal.notice.title|e }}</a>
			</div>
		{% endfor %}
	</div>